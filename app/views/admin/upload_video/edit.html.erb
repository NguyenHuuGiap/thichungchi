<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Edit Upload Video</h1>
  </div>
  <div id="flash-message">
    <%= render "admin/shared/flash", flash: flash %>
  </div>
</div>
<div class="panel-body">
  <%= simple_form_for @video, url: admin_upload_video_path, method: :PATCH, html: {class: "form"} do |f| %>
    <div class="modal-body">
      <div class="form-group row margin-center">
        <label for="example-text-input" class="col-2 col-form-label">Title</label>
        <div class="col-10">
          <%= f.input :name, input_html: {class: "form-control"}, label: false %>
        </div>
      </div>
      </br>
      <div class="form-group row margin-center">
        <label for="example-text-input" class="col-2 col-form-label">Embed Video Youtube</label>
        <div class="col-10">
          <%= f.input :description, input_html: {class: "form-control embed-video"}, label: false %>
        </div>
      </div>
      </br>
      <div class="form-group row margin-center show-video">
        <label for="example-text-input" class="col-2 col-form-label">Show Video Youtube</label>
        <div class="col-10 embeding-video">
          <iframe class="abc" width="420" height="345" src=""></iframe>
        </div>
      </div>
    </div>
    <%= f.submit 'Save', class: "btn btn-default btn-close" %>
  <% end %>
</div>
