<html>
  <head>
    <title>GiaPha</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= stylesheet_link_tag "sb-admin-2", media: "all" %>
    <%= javascript_include_tag "application" %>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <div class="login-panel panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Please Sign In</h3>
            </div>
            <div class="panel-body">
              <%= simple_form_for resource, html: {class: "form", novalidate: true}, as: resource_name,
                url: session_path(resource_name) do |f| %>
                <fieldset>
                  <div class="form-group">
                    <%= f.email_field :login, autofocus: true, class: "form-control", placeholder: "E-mail" %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
                  </div>
                  <div class="checkbox">
                    <label>
                      <%= f.input :remember_me, as: :boolean, boolean_style: :inline, label: false, wrapper: false %>
                    </label>
                    Remember Me
                  </div>
                  <%= f.submit "Login", class: "btn btn-lg btn-success btn-block" %>
                </fieldset>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
