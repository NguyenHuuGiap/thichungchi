<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Add Image</h1>
  </div>
  <div id="flash-message">
    <%= render "admin/shared/flash", flash: flash %>
  </div>
</div>
<div class="panel-body">
  <%= simple_form_for @image, url: admin_upload_image_index_path, method: :post, html: {class: "form"} do |f| %>
    <%= f.input :target_type, as: :hidden, input_html: {value: "Image"} %>
    <div class="modal-body">
      <div class="form-group row margin-center">
        <label for="example-text-input" class="col-2 col-form-label">Title</label>
        <div class="col-10">
          <%= f.input :name, input_html: {class: "form-control"}, label: false %>
        </div>
      </div>
      </br>
      <div class="form-group row margin-center">
        <label for="example-text-input" class="col-2 col-form-label">Description</label>
        <div class="col-10">
          <%= f.input :description, input_html: {class: "form-control"}, label: false %>
        </div>
      </div>
      </br>
      <div class="form-group row margin-center">
        <label for="example-text-input" class="col-2 col-form-label">Pattern</label>
        <div class="col-10">
          <%= f.collection_radio_buttons :pattern, [[:top, "Top"], [:left, "Left"]], :first, :last, {checked: :top} %>
        </div>
      </div>
      </br>
      <div class="form-group row margin-center">
        <label for="example-text-input" class="col-2 col-form-label">Attachment</label>
        <div class="col-10">
          <div class="image-preview-css <%= @image.attachment.present? ? "image-preview" : nil %>" data-background="<%= @image.attachment %>"></div>
          </br>
          <div>
            <%= f.input :attachment, as: :file, error: false, label: false, wrapper: false,
              input_html: {class: "change_image_preview"} %>
            <div id="error-img">
              <%= f.error :attachment, class: "form__item-error error-msg" %>
            </div>
          </div>
        </div>
      </div>
      </br>
    </div>
    <%= f.submit 'Save', class: "btn btn-default btn-close" %>
  <% end %>
</div>
