<tr class="odd gradeX tr-<%= image.id %>">
  <td>
    <%= index + 1 %>
  </td>
  <td>
    <%= image.name %>
  </td>
  <td>
    <a class="fancybox-buttons" data-fancybox-group="button"
      href="<%= image_url image.attachment %>">
      <%= image_tag image.attachment.url, with: 100, height: 100, alt: "" %>
    </a>
  </td>
  <td class="center"><%= image.created_at %></td>
  <td class="center"><%= image.updated_at %></td>
  <td class="center">
    <a href="<%= edit_admin_upload_image_path image %>" class="edit_modal_post">
      <i class="fa fa-edit fa-fw"></i>
    </a>
    <%= link_to admin_upload_image_path(image), method: :delete, remote: true, data: { confirm: 'Bạn chắc chắn muốn xóa Image này?' } do %>
      <i class="fa fa-trash-o fa-fw"></i>
    <% end %>
  </td>
</tr>
