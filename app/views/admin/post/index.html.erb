<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Tables</h1>
  </div>
  <div id="flash-message">
    <%= render "admin/shared/flash", flash: flash %>
  </div>
</div>
<div class="panel-body">
  <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-allpage">
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Image</th>
        <th>Created at</th>
        <th>Updated at</th>
        <th>Category</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr class="odd gradeX">
          <td>
            <%= link_to admin_post_path(post) do %>
              <%= post.title %>
            <% end %>
          </td>
          <td>
            <%= post&.content.truncate 250, omission: '...' %>
          </td>
          <td><%= image_tag post.image, size: "80" %></td>
          <td class="center"><%= post.created_at %></td>
          <td class="center"><%= post.updated_at %></td>
          <td class="center"><%= post&.category&.name %></td>
          <td class="">
            <a href="javascript:void(0)" data-id="<%= post.id %>" class="show_modal_post">
              <i class="fa fa-eye fa-fw"></i>
            </a>
            <a href="javascript:void(0)" data-id="<%= post.id %>" class="edit_modal_post">
              <i class="fa fa-edit fa-fw"></i>
            </a>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div id="myModal" class="modal fade" role="dialog">
</div>
