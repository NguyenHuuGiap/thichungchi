<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">User</h1>
  </div>
  <div id="flash-message">
    <%= render "admin/shared/flash", flash: flash %>
  </div>
</div>
<div class="panel-body">
  <div class="row">
    <div class="col-md-2 col-sm-2 col-xs-2">
      <a href="<%= new_admin_user_path %>" class="btn btn-success mg-bot-15" role="button">Create User</a>
    </div>
    <div class="col-md-2 col-sm-2 col-xs-2">
      <a href="<%= export_admin_users_path(format: :csv) %>" class="btn btn-success mg-bot-15" role="button">Export</a>
    </div>
    <div class="col-md- col-sm- col-xs- col">
      <%= simple_form_for [:admin, @user], url: import_admin_users_path, method: :post, remote: true, html: {class: "form-import", multipart: true} do |f| %>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= f.file_field :file,  class: "import-user", accept: ".xlsx, .csv" %>
      <% end %>
    </div>

  </div>
  <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-allpage">
    <thead>
      <tr>
        <th>STT</th>
        <th>Name</th>
        <th>Email</th>
        <th>Number phone</th>
        <th>Birthday</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody class="data-tbody">
      <% @users.each_with_index do |user, index| %>
        <%= render "datatable", user: user, index: index %>
      <% end %>
    </tbody>
  </table>
</div>
